set nu                   " Numbers for lines
set virtualedit+=onemore " Make cursor stand at the end of the line exactly
set ruler                " Make indicator where are you - visible. CTRL+G will show only total pages and % where are you.
" set spell spelllang=en_us,ru  " Spelling for different languages

if has("gui_running")
  set guifont=Monaco:h12
endif

set nocompatible              " required
filetype off                  " required

set guifont=Cascadia_Mono:h12

set cursorline
syntax on

